struct PixelInputType
{
    float4 position : SV_POSITION;
    float3 color : COLOR;
};

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 main(PixelInputType input) : SV_TARGET
{
    return float4( input.color, 1.0f );
}

