
#include "common.vs"
#include "samplers.sh"

/////////////
// GLOBALS //
/////////////

Texture2D shaderTexture : register(t0);


//////////////
// TYPEDEFS //
//////////////

struct PixelInputType
{
    float4 position : SV_POSITION; 
	float2 uv: TEXCOORD;	
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 main(PixelInputType input) : SV_TARGET
{
    float4 color;
	
	color = shaderTexture.Sample( g_SamplerLinearWrap, input.uv );
	
	color *= float4( 1.0, 0.0, 0.0, 1.0 );
	
    return color;
}